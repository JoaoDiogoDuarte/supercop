# -*- Makefile -*-

-include ../../../../Makefile.conf

CC     ?= /usr/bin/cc
CFLAGS := -Wall -Wextra -Wpedantic -Wmissing-prototypes -Wredundant-decls -Wshadow -Wpointer-arith -mavx2 -mbmi2 -mpopcnt -march=native -mtune=native -O3 -fomit-frame-pointer -z noexecstack -l25519 -lrandombytes
OS     := $(shell uname -s)

default: test

test: test/test_xkem_functionality test/test_speed

# KYBERHEADERS =  ../../kyber/avx2/params.h ../../kyber/avx2/align.h ../../kyber/avx2/kem.h ../../kyber/avx2/indcpa.h ../../kyber/avx2/polyvec.h ../../kyber/avx2/poly.h ../../kyber/avx2/reduce.h fq.inc shuffle.inc ../../kyber/avx2/ntt.h ../../kyber/avx2/consts.h ../../kyber/avx2/rejsample.h ../../kyber/avx2/cbd.h ../../kyber/avx2/verify.h ../../kyber/avx2/symmetric.h ../../kyber/avx2/randombytes.h ../../kyber/avx2/fips202.h ../../kyber/avx2/fips202x4.h
HEADERS = xkem.h params.h fips202.h
TESTHEADERS = $(HEADERS) test/cpucycles.h test/speed_print.h

# KYBERSOURCES = ../../kyber/avx2/kem.c ../../kyber/avx2/indcpa.c ../../kyber/avx2/polyvec.c ../../kyber/avx2/poly.c fq.S shuffle.S ntt.S invntt.S basemul.S ../../kyber/avx2/consts.c ../../kyber/avx2/randombytes.c ../../kyber/avx2/rejsample.c ../../kyber/avx2/cbd.c ../../kyber/avx2/verify.c ../../kyber/avx2/fips202.c ../../kyber/avx2/fips202x4.c ../../kyber/avx2/symmetric-shake.c ../../kyber/avx2/keccak4x/KeccakP-1600-times4-SIMD256.o
SOURCES =  xkem.c fips202.c
TESTSOURCES = $(SOURCES) test/cpucycles.c test/speed_print.c 

test/test_xkem_functionality: $(TESTSOURCES) $(TESTHEADERS) test/test_xkem_functionality.c
	$(CC) $(CFLAGS) -Dkyber_K=3 $(TESTSOURCES) test/test_xkem_functionality.c -o $@ -L. -lpqcrystals_kyber768_avx2

test/test_speed: $(TESTSOURCES) $(TESTHEADERS) test/test_speed.c
	$(CC) $(CFLAGS) -Dkyber_K=3 $(TESTSOURCES) test/test_speed.c -o $@ -L. -lpqcrystals_kyber768_avx2

.PHONY: clean

clean:
	-rm -f test/test_xkem_functionality
	-rm -f test/test_speed
	-rm -f *.s
ifeq ($(OS),Darwin)
	-rm -rf test/*.dSYM
endif
